{
	"compilerOptions": {
		"lib": ["dom", "es2017"],
		"target": "es6",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"jsx": "react",
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
}
